---
import "../global.css";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-stone-50 p-5 text-stone-600 antialiased">
		<div class="mx-auto container flex flex-col space-y-2 max-w-[90ch]" id="content">
			<slot />
		</div>
	</body>
</html>